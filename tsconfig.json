{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "types": ["svelte", "node"],
	  "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.svelte"
  ],
  "extends": "@tsconfig/svelte/tsconfig.json",
}
